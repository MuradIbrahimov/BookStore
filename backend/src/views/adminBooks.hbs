<div class="container my-5">
  <h2>Books</h2>
  <!-- Add Book Form -->
  <form method="post" action="/auth/books/add" class="mb-4">
    <div class="row g-3">
      <div class="col-md-3">
        <input type="text" name="title" placeholder="Title" class="form-control" required />
      </div>
      <div class="col-md-2">
        <input type="number" name="author_id" placeholder="Author ID" class="form-control" required />
      </div>
      <div class="col-md-2">
        <input type="number" name="published_year" placeholder="Year" class="form-control" required />
      </div>
      <div class="col-md-2">
        <input type="text" name="genre" placeholder="Genre" class="form-control" required />
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Add Book</button>
      </div>
    </div>
  </form>

  <!-- Books Table -->
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Author ID</th>
        <th>Published Year</th>
        <th>Genre</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each books}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.title}}</td>
        <td>{{this.author_id}}</td>
        <td>{{this.published_year}}</td>
        <td>{{this.genre}}</td>
        <td>
          <!-- Edit Form -->
          <form method="post" action="/auth/books/edit/{{this.id}}" class="d-inline">
            <button type="submit" class="btn btn-warning btn-sm">Edit</button>
          </form>
          <!-- Delete Form -->
          <form method="post" action="/auth/books/delete/{{this.id}}" class="d-inline">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
