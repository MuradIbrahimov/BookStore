<div class="container my-5">
  <h2>Available Books</h2>
  <!-- Search Form -->
  <form method="get" action="/customer/books/search" class="mb-4">
    <div class="row g-3">
      <div class="col-md-8">
        <input type="text" name="query" placeholder="Search books by title, category, or ISBN" class="form-control" required />
      </div>
      <div class="col-md-4">
        <button type="submit" class="btn btn-primary w-100">Search</button>
      </div>
    </div>
  </form>

  <!-- Books Table -->
 <table class="table table-striped">
  <thead>
    <tr>
      <th>ISBN</th>
      <th>Title</th>
      <th>Author</th>
      <th>Award</th>
      <th>Category</th>
      <th>Price</th>
      <th>Total Quantity</th>
    </tr>
  </thead>
  <tbody>
    {{#each books}}
      <tr>
        <td>{{this.isbn}}</td>
        <td>{{this.title}}</td>
        <td>{{this.authors}}</td>
        <td>{{this.awards}}</td>
        <td>{{this.category}}</td>
        <td>{{this.price}}</td>
        <td>{{this.total_quantity}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
